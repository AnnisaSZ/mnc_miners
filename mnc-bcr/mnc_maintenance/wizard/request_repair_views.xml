<odoo>
    <record id="request_repair_wizard_form" model="ir.ui.view">
        <field name="name">request.repair.wizard.form</field>
        <field name="model">request.repair.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="breakdown_id" invisible="1"/>
                    <field name="repair_type" widget="radio" options="{'horizontal': true}"/>
                </group>
                <footer>
                    <button string="Request" type="object" name="do_request" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_request_repair_wizard" model="ir.actions.act_window">
        <field name="name">Request Repair</field>
        <field name="res_model">request.repair.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>