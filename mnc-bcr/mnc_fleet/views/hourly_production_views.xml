<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="fleet_hourly_prod_form" model="ir.ui.view">
            <field name="name">fleet.hourly.prod.form</field>
            <field name="model">fleet.hourly.prod</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_close" string="Close" type="object" class="oe_highlight" attrs="{'invisible': [('state', '=', 'close')]}"/>
                        <button name="action_reset" string="Reset Draft" type="object" attrs="{'invisible': [('state', '!=', 'close')]}"/>
                        <field name="state" readonly="True" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button type="object" name="action_view_breakdown" class="oe_stat_button" icon="fa-list-ul">
                                <span>Breakdown</span>
                                <field name="breakdown_unit_ids" invisible="1"/>
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Closed" attrs="{'invisible': [('state', '!=', 'close')]}"/>
                        <label for="code_seq"/>
                        <h1>
                            <div>
                                <div>
                                    <field name="code_seq" readonly="1" force_save="1"/>
                                </div>
                            </div>
                        </h1>
                        <group>
                            <group>
                                <field name="date"/>
                                <field name="unit_equip_id"/>
                                <field name="equipment_group_id"/>
                                <field name="shift_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="shift_line_id" required="1" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                                <field name="operator_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="operation" string="Detail Operation">
                                <field name="line_ids">
                                    <tree editable="bottom" limit="5">
                                        <field name="shift_line_id" invisible="1"/>
                                        <field name="time_from" widget="float_time"/>
                                        <field name="time_to" widget="float_time"/>
                                        <field name="dumptruck_id" domain="[('interface_id.name', '=', 'DT')]" required="1"/>
                                        <field name="material_id" context="{'unit_id': dumptruck_id}"/>
                                        <field name="ritase"/>
                                        <field name="is_volume"/>
                                        <field name="volume" attrs="{'readonly': [('is_volume', '=', False)]}"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="losttime" string="Lost Time">
                                <field name="line_lost_ids">
                                    <tree editable="bottom">
                                        <field name="start" widget="float_time" required="1"/>
                                        <field name="end" widget="float_time" required="1"/>
                                        <field name="losttime_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                                        <field name="is_remarks" invisible="1"/>
                                        <field name="rca_id" attrs="{'required': [('is_remarks', '=', True)]}" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="fleet_hourly_prod_tree" model="ir.ui.view">
            <field name="name">fleet.hourly.prod.tree</field>
            <field name="model">fleet.hourly.prod</field>
            <field name="arch" type="xml">
                <tree decoration-success="state == 'close'">
                    <field name="code_seq" readonly="1"/>
                    <field name="date"/>
                    <field name="unit_equip_id"/>
                    <field name="shift_line_id"/>
                    <field name="operator_id"/>
                    <field name="state" widget="badge" decoration-success="state in ('close')"/>
                </tree>
            </field>
        </record>

        <record id="action_hourly_production" model="ir.actions.act_window">
            <field name="name">Hourly Production</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">fleet.hourly.prod</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    /
                </p>
            </field>
        </record>
    </data>
</odoo>