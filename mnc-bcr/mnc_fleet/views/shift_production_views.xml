<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="fleet_shiftly_prod_form" model="ir.ui.view">
            <field name="name">fleet.shiftly.prod.form</field>
            <field name="model">fleet.shiftly.prod</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_close" string="Close" type="object" class="oe_highlight" attrs="{'invisible': [('state', '=', 'close')]}"/>
                        <button name="action_reset" string="Reset Draft" type="object" attrs="{'invisible': [('state', '!=', 'close')]}"/>
                        <field name="state" readonly="True" widget="statusbar"/>
                    </header>
                    <field name="is_dt" invisible="1"/>
                    <field name="is_ex" invisible="1"/>
                    <field name="is_ot" invisible="1"/>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button type="object" name="action_view_breakdown" class="oe_stat_button" icon="fa-list-ul">
                                <span>Breakdown</span>
                                <field name="breakdown_ids" invisible="1"/>
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Closed" attrs="{'invisible': [('state', '!=', 'close')]}"/>
                        <label for="code_seq"/>
                        <h1>
                            <div>
                                <div>
                                    <field name="code_seq" readonly="1" force_save="1"/>
                                </div>
                            </div>
                        </h1>
                        <group>
                            <group>
                                <field name="name" invisible="1"/>
                                <field name="date"/>
                                <field name="unit_equip_id"/>
                                <field name="sub_kontraktor_id" invisible="1"/>
                                <field name="shift_id" invisible="1" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                                <field name="shift_line_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                                <field name="wh_total" readonly="1" force_save="1"/>
                                <field name="lost_total" readonly="1" force_save="1"/>
                            </group>
                            <group>
                                <field name="operator_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                                <field name="hm_awal"/>
                                <field name="hm_akhir"/>
                                <field name="hm_total" readonly="1" force_save="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="operation" string="Detail Operation">
                                <field name="line_ids">
                                    <tree editable="bottom" limit="5">
                                        <field name="shift_line_id" readonly="1" force_save="1"/>
                                        <field name="shiftly_id" invisible="1"/>
                                        <field name="from_location_id"/>
                                        <field name="to_location_id" attrs="{'column_invisible': [('parent.is_dt', '!=', True)], 'required': [('parent.is_dt', '=', True)]}"/>
                                        <field name="material_id"/>
                                        <field name="activity_id"/>
                                        <field name="process_id"/>
                                        <field name="unit_loader_id" attrs="{'column_invisible': [('parent.is_dt', '!=', True)], 'required': [('parent.is_dt', '=', True)]}"/>
                                        <field name="ritase" attrs="{'column_invisible': [('parent.is_ot', '=', True)], 'required': [('parent.is_ot', '!=', True)]}"/>
                                        <!-- <field name="is_volume" attrs="{'column_invisible': [('parent.is_ot', '=', True)], 'required': [('parent.is_ot', '!=', True)]}"/> -->
                                        <field name="volume" attrs="{'column_invisible': [('parent.is_ot', '=', True)], 'required': [('parent.is_ot', '!=', True)]}" readonly="1" force_save="1" sum="Total Volume"/>
                                        <field name="distance" attrs="{'column_invisible': [('parent.is_dt', '!=', True)], 'required': [('parent.is_dt', '=', True)]}"/>
                                        <field name="hm" readonly="1" force_save="1" sum="Total HM"/>
                                        <field name="working_hour" readonly="1" force_save="1" sum="Total WH"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="losttime" string="Lost Time">
                                <field name="line_lost_ids">
                                    <tree editable="bottom">
                                        <field name="start" widget="float_time" required="1"/>
                                        <field name="end" widget="float_time" required="1"/>
                                        <field name="losttime_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                                        <field name="is_remarks" invisible="1"/>
                                        <field name="rca_id" attrs="{'required': [('is_remarks', '=', True)]}" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="fleet_shiftly_prod_tree" model="ir.ui.view">
            <field name="name">fleet.shiftly.prod.tree</field>
            <field name="model">fleet.shiftly.prod</field>
            <field name="arch" type="xml">
                <tree decoration-success="state == 'close'">
                    <field name="code_seq" readonly="1"/>
                    <field name="date"/>
                    <field name="unit_equip_id"/>
                    <field name="shift_id"/>
                    <field name="operator_id"/>
                    <field name="state" widget="badge" decoration-success="state in ('close')"/>
                </tree>
            </field>
        </record>

        <record id="action_shiftly_production" model="ir.actions.act_window">
            <field name="name">Shiftly Production</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">fleet.shiftly.prod</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    /
                </p>
            </field>
        </record>
    </data>
</odoo>