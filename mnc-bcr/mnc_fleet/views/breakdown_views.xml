<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="fleet_breakdown_form" model="ir.ui.view">
            <field name="name">fleet.breakdown.form</field>
            <field name="model">fleet.breakdown</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_close" string="Close" type="object" class="oe_highlight" attrs="{'invisible': [('state', '=', 'close')]}"/>
                        <button name="action_revise" string="Revise" type="object" attrs="{'invisible': [('state', 'in', ['draft', 'revise'])]}" groups="mnc_fleet.fleet_category_admin"/>
                        <field name="state" readonly="True" widget="statusbar"/>
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Closed" attrs="{'invisible': [('state', '!=', 'close')]}"/>
                        <widget name="web_ribbon" title="Revise" bg_color="bg-danger" attrs="{'invisible': [('state', '!=', 'revise')]}"/>
                        <label for="code_seq"/>
                        <h1>
                            <div>
                                <div>
                                    <field name="code_seq" readonly="1" force_save="1"/>
                                </div>
                            </div>
                        </h1>
                        <group>
                            <group>
                                <field name="hourly_id" invisible="1"/>
                                <field name="shiftly_id" invisible="1"/>
                                <field name="is_revise" invisible="1"/>
                                <field name="date" attrs="{'readonly': [('state', '=', 'close')]}"/>
                                <field name="unit_equip_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}" attrs="{'readonly': [('state', '=', 'close')]}"/>
                                <field name="shift_id" invisible="1"/>
                                <field name="shift_line_id" attrs="{'readonly': [('state', '=', 'close')]}" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}" required="1"/>
                                <field name="breakdown_id" attrs="{'readonly': [('state', '=', 'close')]}" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                                <field name="start_bd" attrs="{'readonly': [('state', '=', 'close')]}" widget="float_time"/>
                                <field name="rfu" attrs="{'readonly': [('state', '=', 'close')]}" widget="float_time"/>
                                <field name="open_mechanical" attrs="{'readonly': [('state', '=', 'close')]}" widget="float_time"/>
                            </group>
                            <group>
                                <field name="hm_breakdown" attrs="{'readonly': [('state', '=', 'close')]}"/>
                                <field name="hm_rfu" attrs="{'readonly': [('state', '=', 'close')]}"/>
                                <field name="location_id" attrs="{'readonly': [('state', '=', 'close')]}"/>
                                <field name="pelapor_bd" attrs="{'readonly': [('state', '=', 'close')]}"/>
                                <field name="pelapor_rfu" attrs="{'readonly': [('state', '=', 'close')]}"/>
                                <field name="workorder_no" attrs="{'readonly': [('state', '=', 'close')]}"/>
                                <field name="remarks" attrs="{'readonly': [('state', '=', 'close')]}"/>
                            </group>
                            <group>
                                <field name="revise_datetime" attrs="{'invisible': [('is_revise', '=', False)]}"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="fleet_breakdown_tree" model="ir.ui.view">
            <field name="name">fleet.breakdown.tree</field>
            <field name="model">fleet.breakdown</field>
            <field name="arch" type="xml">
                <tree decoration-success="state == 'close'">
                    <field name="code_seq" readonly="1"/>
                    <field name="date" attrs="{'readonly': [('state', '=', 'close')]}"/>
                    <field name="workorder_no" attrs="{'readonly': [('state', '=', 'close')]}"/>
                    <field name="unit_equip_id" attrs="{'readonly': [('state', '=', 'close')]}"/>
                    <field name="start_bd" attrs="{'readonly': [('state', '=', 'close')]}"/>
                    <field name="rfu" attrs="{'readonly': [('state', '=', 'close')]}"/>
                    <field name="open_mechanical" attrs="{'readonly': [('state', '=', 'close')]}"/>
                    <field name="state" readonly="1" widget="badge" decoration-success="state in ('close')"/>
                </tree>
            </field>
        </record>

        <record id="action_fleet_breakdown" model="ir.actions.act_window">
            <field name="name">Breakdown</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">fleet.breakdown</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    /
                </p>
            </field>
        </record>
    </data>
</odoo>