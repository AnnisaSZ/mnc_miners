<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="summary_audit_form_view" model="ir.ui.view">
        <field name="name">Summary Audit</field>
        <field name="model">wbs.wizard</field>
        <field name="arch" type="xml">
            <form>                
                <group string="Notes">
                    <field name="wbs_head_id" invisible="1"/>
                </group>
                <field name="notes" type="html" nolabel="1"/>

                <group string="Attachment"/>
                <!-- <field name="result_attachment_ids">
                    <tree editable="bottom">
                        <field name="part_filename" string="Name" readonly="1" force_save="1"/>
                        <field name="part_dokumen" string="Download" widget="binary"/>
                    </tree>
                </field> -->
                
                <div class="d-none oe_clear"/>
                <footer>
                    <button
                        name="action_submit"
                        string="Submit"
                        type="object"
                        default_focus="1"
                        class="oe_highlight"
                    />
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="confirmation_bod_form_view" model="ir.ui.view">
        <field name="name">Close Report</field>
        <field name="model">wbs.wizard</field>
        <field name="arch" type="xml">
            <form>                
                Please confirm whether you wish to proceed with the closure of this report. <br/>Once a change has been made, it cannot be edited.
                <div class="d-none oe_clear"/>
                <footer>
                    <button
                        name="button_close"
                        string="Close"
                        type="object"
                        default_focus="1"
                        class="oe_highlight"
                    />
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_audit_wizard" model="ir.actions.act_window">
        <field name="name">Summary Audit</field>
        <field name="res_model">wbs.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>