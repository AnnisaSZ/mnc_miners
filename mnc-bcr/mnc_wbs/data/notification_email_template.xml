        <record id="notification_new_report_wbs_mail_template" model="mail.template">
            <field name="name">Whistle Blowing System New Report user</field>
            <field name="model_id" ref="model_wbs_report_bod"/>
            <field name="subject">Whistle Blowing System New Report</field>
            <field name="email_from">"${object.create_uid.company_id.name | safe}" &lt;${(object.create_uid.company_id.email or user.email) | safe}&gt;</field>
            <field name="body_html" type="html">
