<odoo>

    <record id="list_report_view_tree" model="ir.ui.view">
        <field name="name">List Report</field>
        <field name="model">wbs.report</field>
        <field name="arch" type="xml">
            <tree duplicate="0">
                <field name="name"/>
                <field name="title"/>
                <field name="user_name"/>
                <field name="company_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="state"  readonly="1" widget="badge"/>
            </tree>
        </field>
    </record>
    
    <record id="list_report_view_form" model="ir.ui.view">
        <field name="name">List Report Form</field>
        <field name="model">wbs.report</field>
        <field name="arch" type="xml">
            <form>
            <header>
                <button name="submit" string="Submit" type="object" class="oe_highlight"/>
                <!-- <button name="submit" string="Submit" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'Draft')]}"/> -->
                <field name="state" readonly="True" widget="statusbar" options="{'clickable': '0'}" statusbar_visible="Draft,Submit,Close"/>
            </header>
                <sheet>
                    <label for="name"/>
                    <h1>
                        <field name="name" readonly="1"/>
                    </h1>
                    <group>
                        <group>
                            <field name="user_name" readonly="1"/>
                            <field name="user_email" readonly="1"/>
                        </group>
                        <group>
                            <field name="user_phone" readonly="1"/>
                            <field name="user_company" readonly="1"/>
                        </group>
                    </group>

                    <h3> Reported User </h3>
                    <group>
                        <group>
                            <field name="title" readonly="1"/>
                            <field name="company_id" readonly="1"/>
                        </group>
                        <group>
                            <label for="start_date" string="Period of Incident"/>
                            <div>
                                <field name="start_date" class="oe_inline" readonly="1"/>
                                <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/> 
                                <field name="end_date" class="oe_inline" readonly="1"/>
                            </div>
                            <field name="description" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Attachment" name="attchment">
                            <field name="attachment" options="{'no_open': True}">
                                <tree editable="bottom" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}">
                                    <field name="name" readonly="1"/>
                                    <field name="datas" widget="binary" string="Download"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <!-- <div class="o_attachment_preview"/> -->
            </form>
        </field>
    </record>

    <record id="list_report_view" model="ir.actions.act_window">
        <field name="name">List Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wbs.report</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'delete': 0, 'duplicate': 0, 'create':0}</field>
        <field name="help" type="html">
            <p>
                Add New List Report
            </p>
        </field>
    </record>
</odoo>
