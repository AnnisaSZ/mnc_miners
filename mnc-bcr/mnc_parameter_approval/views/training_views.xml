<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_training_form_inherit_approval" model="ir.ui.view">
            <field name="name">mncei.training.requesition.inherited</field>
            <field name="model">mncei.training.requesition</field>
            <field name="inherit_id" ref="mnc_training_request.view_training_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='is_creator']" position="before">
                    <field name="res_config_approval_id" invisible="1"/>
                    <field name="hrga_dept_params_ids" widget="many2many_tags" invisible="1"/>
                    <field name="accounting_dept_params_ids" widget="many2many_tags" invisible="1"/>
                    <field name="direksi_params_ids" widget="many2many_tags" invisible="1"/>
                </xpath>
                <xpath expr="//page[@name='approval']" position="replace">
                    <page string="Approval" name="approval" attrs="{'invisible': [('is_creator', '=', False)]}">
                        <group>
                            <group string="Head Management">
                                <field name="requestor_id" readonly="1" attrs="{'readonly': [('state','in',('waiting', 'reject', 'approve'))]}" options="{'no_create': True, 'no_open':True}"/>  
                                <field name="head_request_id" domain="[('company_ids', 'in', company_id)]" attrs="{'readonly': [('state','in', ('waiting', 'reject', 'approve'))]}" options="{'no_create': True, 'no_open':True}"/>
                                <field name="spv_hr_id" readonly="1" force_save="1" domain="[('mncei_dept_id', 'in', hrga_dept_params_ids)]" attrs="{'readonly': [('state','in', ('waiting', 'reject', 'approve'))]}" options="{'no_create': True, 'no_open':True}"/> 
                                <field name="head_hrga_id" readonly="1" force_save="1" domain="[('mncei_dept_id', 'in', hrga_dept_params_ids)]" attrs="{'readonly': [('state','in', ('waiting', 'reject', 'approve'))]}" options="{'no_create': True, 'no_open':True}"/> 
                                <field name="accounting_dept_id" readonly="1" force_save="1" domain="[('mncei_dept_id', 'in', accounting_dept_params_ids)]" attrs="{'readonly': [('state','in', ('waiting', 'reject', 'approve'))]}" options="{'no_create': True, 'no_open':True}"/> 
                            </group>
                            <group string="Director">
                                <field name="direksi1_id" readonly="1" force_save="1" domain="[('mncei_dept_id', 'in', direksi_params_ids)]" attrs="{'readonly': [('state','in', ('waiting', 'reject', 'approve'))]}" options="{'no_create': True, 'no_open':True}"/>
                                <field name="direksi2_id" domain="[('mncei_dept_id', 'in', direksi_params_ids)]" attrs="{'readonly': [('state','in', ('waiting', 'reject', 'approve'))]}" options="{'no_create': True, 'no_open':True}"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <!-- Approval -->
        <record id="res_config_approval_training_view_form" model="ir.ui.view">
            <field name="name">res.config.approval.form</field>
            <field name="model">res.config.approval</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="model_type" invisible="1"/>
                        <label for="company_id"/>
                        <h1>
                            <field name="company_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                        </h1>
                        <group>
                            <group>
                                <field name="hr_id" required="1" options="{'no_open': True, 'no_create': True, 'no_create': True}"/>
                                <field name="head_hrga_id" required="1" options="{'no_open': True, 'no_create': True, 'no_create': True}"/>
                                <field name="accounting_id" required="1" options="{'no_open': True, 'no_create': True, 'no_create': True}"/>
                            </group>
                            <group>
                                <field name="direksi1_id" string="Direksi Operational" required="1" options="{'no_open': True, 'no_create': True, 'no_create': True}"/>
                                <field name="direksi2_id" string="Direksi Presiden" options="{'no_open': True, 'no_create': True, 'no_create': True}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="res_config_approval_view_tree" model="ir.ui.view">
            <field name="name">res.config.approval.tree</field>
            <field name="model">res.config.approval</field>
            <field name="arch" type="xml">
                <tree delete="0">
                    <field name="model_type"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record id="action_training_approval" model="ir.actions.act_window">
            <field name="name">Setting Approval</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.approval</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('model_type', '=', 'training')]</field>
            <field name="context">{'delete': 0, 'default_model_type': 'training'}</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('res_config_approval_view_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('res_config_approval_training_view_form')})]"/>
            <field name="help" type="html">
                <p>
                    Add New Setting
                </p>
            </field>
        </record>

        <!-- Menuitem -->
        <menuitem id="training_menu_config" name="Configuration" sequence="100" parent="mnc_training_request.training_menu_root" groups="mnc_training_request.group_training_admin"/>
        <menuitem id="training_menu_set_approval" name="Setting Approval" sequence="10" action="action_training_approval" parent="training_menu_config"/>
    </data>
</odoo>