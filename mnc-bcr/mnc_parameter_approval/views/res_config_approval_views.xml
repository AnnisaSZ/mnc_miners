<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_approval_view_form" model="ir.ui.view">
            <field name="name">res.config.approval.form</field>
            <field name="model">res.config.approval</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="model_type"/>
                        <field name="company_id"/>
                        <group>
                            <group>
                                <field name="spv_id"/>
                                <field name="ga_id"/>
                                <field name="hr_id"/>
                                <field name="head_hrga_id"/>
                                <field name="accounting_id"/>
                                <field name="head_finance_id"/>
                                <field name="procurement_id"/>
                            </group>
                            <group>
                                <field name="direksi1_id"/>
                                <field name="direksi2_id"/>
                                <field name="direksi3_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="res_config_approval_view_tree" model="ir.ui.view">
            <field name="name">res.config.approval.tree</field>
            <field name="model">res.config.approval</field>
            <field name="arch" type="xml">
                <tree delete="0">
                    <field name="model_type"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record id="action_approval" model="ir.actions.act_window">
            <field name="name">Perjalanan Dinas</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">perjalanan.dinas.requestion.module</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('requestor_id', '=', uid)]</field>
            <field name="context">{'delete': 0}</field>
            <field name="help" type="html">
                <p>
                    Add New Request Perjalanan Dinas
                </p>
            </field>
        </record>
    </data>
</odoo>