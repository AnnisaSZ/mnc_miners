<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="pr_approval_wizard_form_inherit" model="ir.ui.view">
        <field name="name">Sign and Approve</field>
        <field name="model">purchase.requisition.approval.wizard</field>
        <field name="inherit_id" ref="mnc_purchase_request.mncei_pr_approval_wizard_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='finance_uid']" position="before">
                <field name="finance_dept_params_ids" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='finance_uid']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_open': True}</attribute>
                <attribute name="domain">[('company_ids', 'in', company_id),  ('mncei_dept_id', 'in', finance_dept_params_ids)]</attribute>
            </xpath>
        </field>
    </record>
</odoo>