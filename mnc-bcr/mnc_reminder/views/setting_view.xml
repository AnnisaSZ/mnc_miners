<?xml version="1.0" encoding="UTF-8"?>
<odoo> 
    <record id="res_config_settings_view_form_reminder" model="ir.ui.view">
        <field name="name">Reminder Notify Setting</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="General Settings" string="Notify Reminder" data-key="mnc_reminder">
                    <div class="app_settings_custom">
                        <h2>Setting Reminder Notify</h2>
                    </div>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <button name="mnc_reminder.action_module_reminder_view" icon="fa-arrow-right" type="action" string="Notify Reminder List" class="btn-link"/>

                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record> 
</odoo>
