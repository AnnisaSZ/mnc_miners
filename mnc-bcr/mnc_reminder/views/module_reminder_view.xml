<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_reminder_view_tree" model="ir.ui.view">
        <field name="name">Reminder List</field>
        <field name="model">module.reminder</field>
        <field name="arch" type="xml">
            <tree decoration-muted="status == 'non_active'">
                <field name="model_id"/>
                <field name="interval_time"/>
                <field name="execution_date"/>
                <field name="user_ids"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="module_reminder_view_form" model="ir.ui.view">
        <field name="name">Reminder List</field>
        <field name="model">module.reminder</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="activate" string="Activate" type="object" class="oe_highlight" attrs="{'invisible': [('status', '=', 'active')]}"/>
                    <button name="deactivate" string="Deactivate" type="object" attrs="{'invisible': [('status', '=', 'non_active')]}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="model_id" attrs="{'readonly': [('status', '=', 'active')]}"/>
                            <field name="fields_id" domain="[('model_id', '=', model_id),('ttype','in', ['date','datetime'])]" attrs="{'readonly': [('status', '=', 'active')]}"/>
                            <field name="interval_time" attrs="{'readonly': [('status', '=', 'active')]}"/>
                            <field name="user_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True}" attrs="{'readonly': [('status', '=', 'active')]}"/>
                        </group>
                        <group>
                            <field name="execution_date" attrs="{'readonly': [('status', '=', 'active')]}"/>
                            <field name="status" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_module_reminder_view" model="ir.actions.act_window">
        <field name="name">Reminder List Action</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">module.reminder</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'delete': 0, 'duplicate': 0}</field>
        <field name="help" type="html">
            <p>
                Add New Module Reminder
            </p>
        </field>
    </record>
</odoo>