    <!-- Department PIC -->
    <record id="department_pic_form" model="ir.ui.view">
        <field name="name">department.pic.form</field>
        <field name="model">department.pic</field>
        <field name="arch" type="xml">
            <form>
                <sheet>                    
                    <group>
                        <group>
                            <field name="department_id"/>
                            <field name="company_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                            <field name="pic_id" invisible="1"/>
                            <field name="pic_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                    </group>
                    <notebook>
                    	<page string="Teams" name="team">
                    		<field name="child_ids">
                    			<tree editable="bottom">
                    				<field name="child_uid"/>
                    				<field name="status"/>
                    			</tree>
                    		</field>
                    	</page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="department_pic_tree" model="ir.ui.view">
