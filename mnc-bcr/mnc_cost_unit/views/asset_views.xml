<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Asset Ext -->
    <record id="view_account_asset_asset_form_inherit" model="ir.ui.view">
        <field name="name">account.asset.asset.form.ext</field>
        <field name="model">account.asset.asset</field>
        <field name="inherit_id" ref="om_account_asset.view_account_asset_asset_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='category_id']" position="before">
                <field name="company_id" options="{'no_create': True}"/>
                <field name="unit_id" domain="[('company_id', '=', company_id)]" options="{'no_create': True}"/>
            </xpath>
        </field>
    </record>

</odoo>