<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="rate_contractor_form" model="ir.ui.view">
            <field name="name">rate.contractor.form</field>
            <field name="model">rate.contractor</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="ttype" widget="radio"/>
                                <field name="distance" attrs="{'invisible': [('ttype', '=', 'hm')]}"/>
                                <field name="activity_id" attrs="{'invisible': [('ttype', '=', 'hm')]}"/>
                                <field name="group_unit" attrs="{'invisible': [('ttype', '=', 'material')]}"/>
                            </group>
                            <group>
                                <field name="standard_fuel" attrs="{'invisible': [('ttype', '=', 'hm')]}"/>
                                <field name="hm_minimum" attrs="{'invisible': [('ttype', '=', 'material')]}"/>
                                <field name="hm_formula" attrs="{'invisible': [('ttype', '=', 'material')]}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="rate_contractor_tree" model="ir.ui.view">
            <field name="name">rate.contractor.tree</field>
            <field name="model">rate.contractor</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="ttype" readonly="1"/>
                    <field name="activity_id"/>
                    <field name="group_unit"/>
                </tree>
            </field>
        </record>

        <record id="action_rate_contractor" model="ir.actions.act_window">
            <field name="name">Rate Contractor</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">rate.contractor</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    /
                </p>
            </field>
        </record>
    </data>
</odoo>