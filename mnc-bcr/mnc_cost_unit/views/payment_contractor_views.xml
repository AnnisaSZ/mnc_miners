<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="payment_contractor_form" model="ir.ui.view">
            <field name="name">payment.contractor.form</field>
            <field name="model">payment.contractor</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="contractor_id"/>
                                <field name="activity_id"/>
                            </group>
                            <group>
                                <label for="date_from" string="Period"/>
                                <div class="o_row">
                                    <field name="date_from" widget="daterange" options="{'related_end_date': 'date_to'}"/> â®•
                                    <field name="date_to" widget="daterange" options="{'related_start_date': 'date_from'}"/>
                                    <button name="action_get_shiftly" class="fa fa-lg fa fa-refresh" type="object"/>
                                </div>
                                <!-- <label for="get_shiftly" string="Get Datas"/> -->
                                <!-- <div> -->
                                <!-- </div> -->
                            </group>
                        </group>
                        <notebook>
                            <page name="operation" string="Detail Operation">
                                <field name="line_ids">
                                    <tree editable="bottom" limit="5">
                                        <field name="unit_equip_id"/>
                                        <field name="hm_total"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="payment_contractor_tree" model="ir.ui.view">
            <field name="name">payment.contractor.tree</field>
            <field name="model">payment.contractor</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="contractor_id" readonly="1"/>
                    <field name="activity_id"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </tree>
            </field>
        </record>

        <record id="action_payment_contractor" model="ir.actions.act_window">
            <field name="name">Payment Contractor</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">payment.contractor</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    /
                </p>
            </field>
        </record>
    </data>
</odoo>