<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="it_subs_form_tree_view" model="ir.ui.view">
        <field name="name">IT Subscription</field>
        <field name="model">it.subs.form</field>
        <field name="arch" type="xml">
            <tree duplicate="0">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="it_subs_form_form_view" model="ir.ui.view">
        <field name="name">IT Subscription Form</field>
        <field name="model">it.subs.form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="classification"/>
                            <field name="subs_type_id"/>
                            <field name="project_name"/>
                            <field name="vendor_id"/>
                            <field name="agreement_date"/>
                            <field name="remark"/>
                            <field name="company_id"/>
                            <field name="pic_id" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="pic_no"/>
                        </group>
                        <group>
                            <field name="hard_file_id"/>
                            <field name="detail_loc"/>
                            <field name="soft_file_id"/>
                            <field name="filename_attachment" invisible="1"/>
                            <field name="attachment" widget="binary" filename="filename_attachment"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Renewal Reminder List" name="renewal_list">
                            <field name="renewal_reminder_ids">
                                <tree editable="bottom">
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="period_subs"/>
                                    <field name="status_id"/>
                                    <field name="remark"/>
                                    <field name="filename_attachment" invisible="1"/>
                                    <field name="attachment" widget="binary" filename="filename_attachment"/>
                                    <field name="reminder_to"/>
                                    <field name="reminder_type"/>
                                    <field name="start_reminder"/>
                                    <field name="unit"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="unit_price" widget="monetary"/>
                                    <field name="total_price" widget="monetary"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="it_subs_form_view" model="ir.actions.act_window">
        <field name="name">My Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">it.subs.form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'delete': 0, 'duplicate': 0}</field>
        <field name="help" type="html">
            <p>
                Add New Location
            </p>
        </field>
    </record>
</odoo>