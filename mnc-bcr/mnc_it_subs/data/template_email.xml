<?xml version="1.0"?>
<odoo>
    <data>
        <record id="notification_it_subs_mail_template" model="mail.template">
            <field name="name">IT Subscription Notification</field>
            <field name="model_id" ref="model_it_subs_form_line"/>
            <field name="subject">New Subscription on ${object.status_id.name}</field>
            <field name="email_from">"${object.form_id.company_id.name | safe}" &lt;${(object.form_id.company_id.email or user.email) | safe}&gt;</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear, <br/>
                        Hereby notified that there is an IT Subscription on ${object.status_id.name} with the following details:
                        <br/>
                        <br/>
                        <table style="margin-top:px;margin-bottom:0px;" border="0">
                            <tbody>
                                <tr>
                                    <td><strong>Subscription ID</strong></td>
                                    <td>:</td>
                                    <td><strong>${object.form_id.name}</strong></td>
                                </tr>
                                <tr>
                                    <td><strong>Subscription Type</strong></td>
                                    <td>:</td>
                                    <td>${object.form_id.subs_type_id.name}</td>
                                </tr>
                                <tr>
                                    <td><strong>Project Name</strong></td>
                                    <td>:</td>
                                    <td>${object.form_id.project_name}</td>
                                </tr>
                                <tr>
                                    <td><strong>Vendor Name</strong></td>
                                    <td>:</td>
                                    <td>${object.form_id.vendor_id.name}</td>
                                </tr>
                                <tr>
                                    <td><strong>Subscription Status</strong></td>
                                    <td>:</td>
                                    <td>${object.status_id.name}</td>
                                </tr>
                                <tr>
                                    <td><strong>End Date</strong></td>
                                    <td>:</td>
                                    <td>${object.end_date}</td>
                                </tr>
                            </tbody>
                        </table>
                        <br/>
                        <t t-if='${object.status_id.name}=="Due Date"'>
                            Please update the renewal subscription before the <strong>End Date</strong>.<br/>
                        </t>

                        Access the IT Subscription System detail form to see the details through the following link:
                        <br/>
                        <a href="https://mncminers.com/web#cids=${object.form_id.company_id.id}&amp;id=${object.form_id.id}&amp;menu_id=&amp;model=it.subs.form&amp;view_type=form">
                            CLICK HERE !
                        </a>
                        <br/><br/>

                        Please be willing to take the time to review and give consent to the reporting. <br/><br/>
                        Regards, <br/>
                        <strong>MNC Energy Investments.</strong>
                    </p>
                </div>
            </field>
            <field name="auto_delete" eval="False"/>
        </record>
    </data>
</odoo>